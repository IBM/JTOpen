  <!-- unsigned long field -->
  <!-- Maps to AS400UnsignedBin8. -->
   <xs:complexType name="unsignedLongFieldType">
     <xs:simpleContent>
         <xs:extension base="xs:unsignedLong">
            <xs:attributeGroup ref="commonFieldAttrs"/>
         </xs:extension>
     </xs:simpleContent>
   </xs:complexType>

  <!-- double field -->
  <!-- Maps to AS400Float8. -->
   <xs:complexType name="doubleFieldType">
     <xs:simpleContent>
         <xs:extension base="xs:double">
