  <!-- Time field -->
  <!-- Expected format: HH:mm:ss -->
  <!-- Example value:   23:59:59 -->
  <!-- Maps to AS400Time. -->
   <xs:complexType name="timeFieldType">
     <xs:simpleContent>
         <xs:extension base="xs:time">
