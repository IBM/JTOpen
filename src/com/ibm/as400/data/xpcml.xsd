  <!-- Date field. -->
  <!-- Expected format: yyyy-MM-dd -->
  <!-- Example value:   2010-01-01 -->
  <!-- Maps to AS400Date. -->
   <xs:complexType name="dateFieldType">
     <xs:simpleContent>
         <xs:extension base="xs:date">
             <xs:attribute name="dateFormat" type="dateFormatType"  />
