  <!-- Maps to AS400Timestamp. -->
   <xs:complexType name="timestampFieldType">
     <xs:simpleContent>
         <xs:extension base="xs:dateTime">
             <xs:attributeGroup ref="commonFieldAttrs"/>
         </xs:extension>
     </xs:simpleContent>
    </xs:complexType>



  <!-- struct Field -->
   <xs:complexType name="structFieldType">
     <xs:simpleContent>
       <xs:extension base="xs:string">
